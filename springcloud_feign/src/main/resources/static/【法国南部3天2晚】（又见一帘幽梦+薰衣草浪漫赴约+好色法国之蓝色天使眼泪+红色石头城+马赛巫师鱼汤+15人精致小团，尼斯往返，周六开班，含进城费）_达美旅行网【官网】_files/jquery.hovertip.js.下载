!function(t){"function"==typeof define&&define.amd?define(["jquery"],t):t(jQuery)}(function(t){t.fn.hoverTips=function(e){var o=this;target=t(this),o.opts=t.extend({event:"mousehover",contentHtml:"这是小说明~~"},e),o.domCon=null,o.create=function(){var e=t("<div class='dm-tips-box'></div>"),n=t("<div class='dm-hovtips'></div>");return n.html(o.opts.contentHtml),o.domCon=e,e.append(n)},o.append=function(){var e=o.create();return t("body").append(e).promise()},o.destroy=function(){o.domCon.hide().remove()},o.show=function(){"mousehover"==o.opts.event?target.mouseenter(function(e){o.append();var n=t(e.target),i=t(".dm-hovtips"),s=n.offset().left,d=n.offset().top,p=n.outerHeight(!0),r=n.outerWidth(!0),f=i.outerWidth(!0),u=s+f>t(window).width()?s+r/2-f:s+r/2-f/2,a=d+p+10;u<0&&(u=s+r/2),t(".dm-tips-box").css({position:"absolute",top:a+"px",left:u+"px","z-index":12}).show("fast")}).mouseleave(function(){o.destroy()}):target.click(function(e){o.append(),t(".dm-tips-box").css({position:"absolute",top:e.pageY+20+"px",left:e.pageX-100+"px","z-index":12}).show("fast")})},o.close=function(){o.destroy()},o.show()}});