!function(t){t.fn.extend({shoping:function(i){var e,n,o=this;i=t.extend({orderbtn:".dm-side-cart"},i);({init:function(){t(o).data("click",!0).live("click",this.addShoping)},addShoping:function(){var d=t(o);x=d.offset().left+30,y=d.offset().top+10,e=t(i.orderbtn).offset().left+t(i.orderbtn).width()/2-d.width()/2+10,n=t(i.orderbtn).offset().top;var a=d.children("img").attr("src");t("body").append('<div class="cartImg"><img src='+a+' width="50" height="50"/></div>');var c=t(".cartImg");c.css({width:"56px",height:"56px",overflow:"hidden",position:"absolute","z-index":"999"}),setTimeout(function(){c.is(":animated")||c.css({left:x,top:y}).animate({left:e+10,top:n-40},500,function(){c.stop(!1,!1).animate({top:n-30,opacity:0},500,function(){c.fadeOut(300,function(){t(".cartImg").hide().remove()})})})})}}).addShoping()}})}(jQuery);